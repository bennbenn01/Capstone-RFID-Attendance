{
  "name": "capstone_rfid_project",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "Benedict Beralde",
  "scripts": {    
    "start:docker:dev": "docker compose -f docker-compose.dev.yml --env-file .env.development up -d",
    "start:docker:prod": "docker compose -f docker-compose.prod.yml --env-file .env.production up -d",
    "build:docker:dev": "docker compose -f docker-compose.dev.yml --env-file .env.development up --build -d",
    "cap:build:docker:dev": "docker compose -f docker-compose.dev.yml --env-file .env.development up --build -d cap_backend",
    "build:docker:prod": "docker compose -f docker-compose.prod.yml --env-file .env.production up --build -d",
    "restart:docker:dev": "docker compose -f docker-compose.dev.yml --env-file .env.development restart",
    "restart:docker:prod": "docker compose -f docker-compose.prod.yml --env-file .env.production restart",
    "down:docker:dev": "docker compose -f docker-compose.dev.yml --env-file .env.production down",
    "down:docker:prod": "docker compose -f docker-compose.prod.yml --env-file .env.production down"
  }
}
